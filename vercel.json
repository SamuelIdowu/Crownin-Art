{
  "version": 2,
  "builds": [
    {
      "src": "api/app.js",
      "use": "@vercel/node"
    },
    {
      "src": "public/*",
      "use": "@vercel/static"
  }
  ],
  "routes": [
    {
      "src": "/(.*)",
      "dest": "api/app.js"
     },
     { "src": "/styles/(.*)", "dest": "/styles/$1" },
     { "src": "/scripts/(.*)", "dest": "/scripts/$1" }
  ]
}


