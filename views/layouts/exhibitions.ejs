<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Exhibitions</title>
    <link rel="stylesheet" href="styles/exhibitions.css" />
    <link rel="stylesheet" href="styles/effects.css" />
  </head>
  <body>
    <%- include("../partials/header") -%>

    <main class="content">
      <div class="exhibitions fade-in" id="exhibitions">
        <% exhibitions.forEach(exhibition => { %>
        <div class="component">
          <div class="video">
            <% if (exhibition.videos && exhibition.videos.length > 0) { %>
            <video controls>
              <source
                src="/exhibition/video/<%= exhibition._id %>/0"
                type="<%= exhibition.videos[0].contentType %>"
              />
              Your browser does not support the video tag.
            </video>
            <% } else { %>
            <div class="video-placeholder">No video available</div>
            <% } %>
          </div>
          <div class="details">
            <h2><%= exhibition.title %></h2>
            <p><%= exhibition.description %></p>
          </div>
        </div>
        <% }) %>
      </div>
    </main>

    <script src="scripts/script.js"></script>
    <%- include("../partials/footer") -%>
  </body>
</html>


